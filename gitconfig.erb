# 
# Generated from gitconfig.erb on <%= `date`.chomp %>
# Edit at your own risk
#
[user]
	name = <%= name %>
	email = <%= email %>
[color]
     ui = auto
[alias]
    glog = log --pretty=format:'%Cgreen%h%Creset : %s %Cgreen(%an) %Cred%ad%Creset' --graph --date=short
    co = checkout
    bk = checkout -

[core]
excludesfile = ~/dotfiles/gitignore_global

[hub]
protocol = https

<% if File.executable? '/usr/local/bin/diffmerge' %>
[merge]
    summary = true
	tool = diffmerge
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = /usr/local/bin/diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /usr/local/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
<% end %>
